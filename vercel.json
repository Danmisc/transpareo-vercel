{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "crons": [
        {
            "path": "/api/cron/hourly",
            "schedule": "0 1 * * *"
        },
        {
            "path": "/api/cron/daily",
            "schedule": "0 0 * * *"
        },
        {
            "path": "/api/cron/weekly",
            "schedule": "0 9 * * 1"
        }
    ]
}